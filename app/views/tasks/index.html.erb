<div class="container">
  <h2 class="h2-task mt-3">Essentials</h2>

  <div class="row">
    <div class="cards mb-3">
        <% @user_service.each do |user_service| %>
          <div class="card-product-task">
            <div class="card-product-infos">
              <h2 class="title-card"><%= user_service.service.name %></h2>
                  <% uniq_user_service = [] %>
                  <% @user_service.filter %>
                  <% user_service.tasks << uniq_user_service %>
                      <% user_service.tasks.each do |task| %>
                        <p><%= task.done %> <%= task.title %>  </p>
                      <% end %>
                  <%= link_to  "+", new_user_service_task_path(user_service) %>
                  <%= link_to "edit" %>
            </div>
          </div>
        <% end %>
    </div>
  </div>

