<div class="container">
  <div class="row edit-us-show">
    <div class="col">
      <div class="position-logo-service">
        <div class="logo-service">
          <%= image_tag "poleemploi.png" %>
        </div>
      </div>
      <%= simple_form_for (@user_service) do |f| %>
        <%= f.input :contact_name, label: "Nom du Contact"  %>
        <%= f.input :contact_phone, label: "Numéro de Téléphone du Contact" %>
        <%= f.input :contact_email,label: "Email du Contact" %>
        <%= f.input :contact_address,label: "Adresse du Contact" %>
        <%= f.submit "Sauvegarder", id: 'link-us-edit' %>
      <%end%>
    </div>
  </div>
</div>
