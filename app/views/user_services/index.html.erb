<div class="banner-statistics">
  <div class="row statistics-row">
    <div class="col-3">
      <div class="macaron">
          <% tasks_done = []%>
          <% tasks_pending = []%>
          <% current_user.tasks.each do |task|  %>
            <% if task.done == true  %>
              <% tasks_done << task.done  %>
              <% else %>
              <% tasks_pending << task.done  %>
              <% end  %>
            <% end  %>
        <h2><%= current_user.tasks.count %></h2>
        <p>Toutes les t√¢ches</p>
      </div>
    </div>
    <div class="col-3">
      <div class="macaron">
        <h2><%= tasks_pending.size %></h2>
        <p>T√¢ches en attente</p>
      </div>
    </div>
    <div class="col-3">
      <div class="macaron">
        <h2><%=tasks_done.size %></h2>
        <p>T√¢ches effectu√©es</p>
      </div>
    </div>
    <div class="col-3">
      <% if @tasks.count == 0 %>
        <div class="data-img">
          <%= image_tag "data.png" %>
        </div>
      <% elsif @tasks.count >= 1 %>
        <div class="doughnut">
          <canvas
            data-controller="chart"
            data-chart-type-value="doughnut"
            data-chart-data-value= "<%= @doughnut_data.to_json %>"
            data-chart-options-value= "<%= @doughnut_options.to_json %>"
          ></canvas>
        </div>
      <% end %>
    </div>
  </div>
</div>


