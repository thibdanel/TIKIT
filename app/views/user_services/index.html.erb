<div class="container">

  <div class="container">
    <h1>Mes services</h1>
      <div class="row">
        <div class="cards">
          <% @user_services.each do |user_service| %>
            <div class="card-product">
              <img src="https://www.e-carion.com/wp-content/uploads/2016/04/logo-impots-gouv.jpg" />
                <div class="card-product-infos">
                  <h2><%= link_to user_service.service.name, user_service_path(user_service) %></h2>
                  <p>Name: <%= user_service.contact_name %> </p>
                  <p>Tel: <%= user_service.contact_phone %> </p>
                  <p>Mail: <%= user_service.contact_email %> </p>
                </div>
              <p><%= link_to "Edit", edit_user_service_path(user_service)%> </p>
              <p><%= link_to "Delete", user_service_path(user_service), method: :delete %></p>
            </div>
          <% end %>
        </div>
      </div>
  </div>

  <div class="container">
    <h1>Services disponibles</h1>
       <div class="row">
        <div class="cards">
          <% @services.each do |service| %>
            <div class="card-product">
              <img src="https://www.e-carion.com/wp-content/uploads/2016/04/logo-impots-gouv.jpg" />
                <div class="card-product-infos">
                  <h2><%= link_to service.name, service_path(service) %></h2>
                </div>
              <p><%= link_to "Add", edit_service_path(service)%> </p>
            </div>
          <% end %>
        </div>
      </div>
  <%= link_to "Create your own service", new_user_service_path(@user_service), class: 'btn btn-primary' %>
</div>
